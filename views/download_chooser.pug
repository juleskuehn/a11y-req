extends layout

block content
  h1#wb-cont(property="name")= title

  form(method='POST')
    .saved-form-input(style='display:none')
      each id in clause_list
        input(id=id type='checkbox' name='clauses' value=id checked=true)
    h2 Full requirements table with informative sections
    .btn-group
      button.btn.btn-primary(type='submit' formaction='download_full_en') Download (English)
      button.btn.btn-primary(type='submit' formaction='download_full_fr') Download (French)
    h2 Testable requirements and determination of compliance table
    .btn-group
      button.btn.btn-primary(type='submit' formaction='download_test_table_en') Download (English)
      button.btn.btn-primary(type='submit' formaction='download_test_table_fr') Download (French)
    h2 Headered requirements with details
    .btn-group
      button.btn.btn-primary(type='submit' formaction='download_clause_details_en') Download (English)
      button.btn.btn-primary(type='submit' formaction='download_clause_details_fr') Download (French)
    h2 Nested list of requirements, no details
    .btn-group
      button.btn.btn-primary(type='submit' formaction='download_clause_list_en') Download (English)
      button.btn.btn-primary(type='submit' formaction='download_clause_list_fr') Download (French)