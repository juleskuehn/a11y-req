extends item_form

block form
  -var itemExists = item!==undefined

  form(method='POST' action='')
    .form-group
      label.required(for='name')
        span.field-name Section title 
        strong.required (required)
      input#name.form-control(type='text' placeholder='' required='required' name='name' value=(itemExists ? item.name : ''))
    .form-group(lang='fr')
      label.required(for='frName')
        span.field-name Titre de section 
        strong.required (obligatoire)
      input#frName.form-control(type='text' placeholder='' required='required' name='frName' value=(itemExists ? item.frName : ''))
    .checkbox
      label(for='showHeading')
        input#showHeading(type='checkbox' name='showHeading' checked=(itemExists ? item.showHeading : 'checked'))
        | Display section title as a heading
    .form-group
      label(for='bodyHtml')
        span.field-name Content (HTML)
      textarea#bodyHtml.form-control(name='bodyHtml' rows='10')
        if itemExists
          | #{item.bodyHtml}
    .form-group(lang='fr')
      label(for='frBodyHtml')
        span.field-name Contenu (HTML)
      textarea#frBodyHtml.form-control(name='frBodyHtml' rows='10')
        if itemExists
          | #{item.frBodyHtml}
    .form-group
      label(for='order')
        span.field-name Order (1 comes before 2, etc.)
      input#order.form-control(type='text' placeholder='' name='order' value=(itemExists ? item.order : ''))
      
    button.btn.btn-primary(type='submit') Submit