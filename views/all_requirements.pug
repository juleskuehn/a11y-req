extends layout

block content
  h1#wb-cont(property="name")= title

  form(method='POST')
    .saved-form-input(style='display:none')
      each clause in item_list
        input(id=clause.id type='checkbox' name='clauses' value=clause.id checked=true)
    h2 Full requirements table with informative sections
    .btn-group
      button.btn.btn-primary(type='submit' formaction='download-en') Download (English)
      button.btn.btn-primary(type='submit' formaction='download-fr') Download (French)
    h2 Only testable clauses and determination of compliance
    .btn-group
      button.btn.btn-primary(type='submit' formaction='onlyClauses-en') Download (English)
      button.btn.btn-primary(type='submit' formaction='onlyClauses-fr') Download (French)
  
  include includes/intro
  include includes/scope
  include includes/table
  include includes/annex